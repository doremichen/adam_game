<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">

        <ListPreference
            app:entries="@array/speed_array"
            app:entryValues="@array/speed_values"
            app:key="speed"
            app:title="@string/tv_setting_select_game_speed"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/switch_setting_enable_sound">

        <SwitchPreferenceCompat
            app:key="sound_effect"
            app:title="@string/tetris_game_play_effect_setting_title" />

    </PreferenceCategory>

</PreferenceScreen>