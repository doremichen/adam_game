
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#B0B0B0"
                android:centerColor="#C8C8C8"
                android:endColor="#DCDCDC"
                android:angle="45"
                android:type="linear" />
            <stroke android:width="2dp" android:color="#60FFFFFF" />
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp" />
        </shape>
    </item>

    <!-- Pressed -->
    <item android:state_pressed="true" android:drawable="@drawable/button_gradient_pressed"/>

    <!-- Default -->
    <item android:drawable="@drawable/button_gradient"/>


    <item android:state_focused="true" android:drawable="@drawable/button_gradient_pressed"/>
    <item android:state_hovered="true" android:drawable="@drawable/button_gradient_pressed"/>

</selector>
