<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/tic_tac_toe_game_setting_category"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="game_mode_pve"
            app:title="@string/tic_tac_toe_pve_setting"
            app:summaryOn="@string/tic_tac_toe_pve_ai_enable"
            app:summaryOff="@string/tic_tac_toe_pvp_enable"
            app:defaultValue="false"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/tic_tac_toe_ai_setting_category"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="ai_strategy_hard"
            app:title="@string/tic_tac_toe_ai_hard_mode"
            app:summaryOn="@string/tic_tac_toe_ai_best_strategy"
            app:summaryOff="@string/tic_tac_toe_ai_random"
            app:defaultValue="true"
            app:dependency="game_mode_pve"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

</PreferenceScreen>
