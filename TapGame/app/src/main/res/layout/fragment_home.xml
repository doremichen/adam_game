<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.adam.app.tapgame.home.HomeViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        tools:context=".home.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Start -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tap_game_start_btn"
                android:textSize="20sp"
                android:textStyle="bold"
                android:onClick="@{() -> viewModel.onStartGameClicked()}"
                android:layout_marginBottom="12dp" />

            <!-- Setting -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_settings"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tap_game_setting_btn"
                android:textSize="20sp"
                android:textStyle="bold"
                android:onClick="@{() -> viewModel.onSettingsClicked()}"
                android:layout_marginBottom="12dp" />

            <!-- About -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_about"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tap_game_about_btn"
                android:textSize="20sp"
                android:textStyle="bold"
                android:onClick="@{() -> viewModel.onAboutClicked()}"
                android:layout_marginBottom="12dp" />

            <!-- Exit -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_exit"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tap_game_exit_btn"
                android:textSize="20sp"
                android:onClick="@{() -> viewModel.onExitClicked()}"
                android:textStyle="bold"/>

        </LinearLayout>

    </FrameLayout>

</layout>
