<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/material_dynamic_neutral20"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- 上方分數與時間區 -->
    <LinearLayout
        android:id="@+id/info_panel"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_score_panel"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Score -->
        <TextView
            android:id="@+id/score_label"
            android:text="@string/tv_score"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/score_value"
            android:text="@string/tv_score_value"
            android:textSize="20sp"
            android:textColor="@color/teal_700"
            android:fontFamily="monospace"
            android:layout_marginHorizontal="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Time -->
        <TextView
            android:id="@+id/time_label"
            android:text="@string/tv_time"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time_value"
            android:text="@string/tv_time_value"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:fontFamily="monospace"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- mole regin -->
    <GridLayout
        android:id="@+id/mole_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/bg_grid_panel"
        android:elevation="6dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/info_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/exitButton">

        <!-- amole button -->
        <ImageButton
            android:id="@+id/mole_0"
            style="@style/MoleButtonStyle"
            android:layout_margin="4dp"
            android:background="@drawable/bg_mole_button_selector"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_1"
            style="@style/MoleButtonStyle"
            android:layout_margin="4dp"
            android:background="@drawable/bg_mole_button_selector"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_2"
            style="@style/MoleButtonStyle"
            android:layout_margin="4dp"
            android:background="@drawable/bg_mole_button_selector"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_3"
            style="@style/MoleButtonStyle"
            android:layout_margin="4dp"
            android:background="@drawable/bg_mole_button_selector"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_4"
            style="@style/MoleButtonStyle"
            android:layout_margin="4dp"
            android:background="@drawable/bg_mole_button_selector"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_5"
            style="@style/MoleButtonStyle"
            android:layout_margin="4dp"
            android:background="@drawable/bg_mole_button_selector"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_6"
            style="@style/MoleButtonStyle"
            android:layout_margin="4dp"
            android:background="@drawable/bg_mole_button_selector"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_7"
            style="@style/MoleButtonStyle"
            android:layout_margin="4dp"
            android:background="@drawable/bg_mole_button_selector"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_8"
            style="@style/MoleButtonStyle"
            android:layout_margin="4dp"
            android:background="@drawable/bg_mole_button_selector"
            android:contentDescription="@null" />
    </GridLayout>

    <!-- 離開按鈕 -->
    <Button
        android:id="@+id/exitButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_exit"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_exit_button"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
