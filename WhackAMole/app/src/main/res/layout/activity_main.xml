<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- score  and time-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- score -->
        <TextView
            android:id="@+id/score_label"
            android:text="@string/tv_score"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/score_value"
            android:text="@string/tv_score_value"
            android:textSize="24sp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- 時間 -->
        <TextView
            android:id="@+id/time_label"
            android:text="@string/tv_time"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time_value"
            android:text="@string/tv_time_value"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/mole_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="16dp">

        <!-- Mouse buttons, 9 in total -->
        <!-- Every button has the same icon, Clicking will score points -->
        <ImageButton
            android:id="@+id/mole_0"
            style="@style/MoleButtonStyle"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_1"
            style="@style/MoleButtonStyle"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_2"
            style="@style/MoleButtonStyle"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_3"
            style="@style/MoleButtonStyle"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_4"
            style="@style/MoleButtonStyle"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_5"
            style="@style/MoleButtonStyle"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_6"
            style="@style/MoleButtonStyle"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_7"
            style="@style/MoleButtonStyle"
            android:contentDescription="@null" />
        <ImageButton
            android:id="@+id/mole_8"
            style="@style/MoleButtonStyle"
            android:contentDescription="@null" />

    </GridLayout>
    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_exit"
        android:layout_marginTop="24dp"/>


</LinearLayout>