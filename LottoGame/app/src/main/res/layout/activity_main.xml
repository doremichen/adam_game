<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.adam.app.lottogame.viewmodel.LotteryViewModel" />
    </data>

    <!-- Root layout: Use ConstraintLayout and add a gradient background. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:elevation="4dp"
            android:text="@string/tv_title_loto_game"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlHardcoded" />

        <!-- The resulting display area is wrapped with a CardView to enhance its 3D effect. -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_results"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toTopOf="@id/btn_vs_ai">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Prize number -->
                <TextView
                    android:id="@+id/tv_drawn_numbers"
                    style="@style/ResultTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:numbersText="@{vm.drawnNumber2}"
                    tools:text="@string/tv_show_lottery_number" />

                <!-- player number -->
                <TextView
                    android:id="@+id/tv_selected_numbers"
                    style="@style/ResultTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:numbersText="@{vm.selectedNumber}"
                    tools:text="@string/tv_select_your_number" />

                <!-- AI number -->
                <TextView
                    android:id="@+id/tv_ai_numbers"
                    style="@style/ResultTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:numbersText="@{vm.AINumbers}"
                    tools:text="@string/loto_game_show_ai_number" />

                <!-- divide -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginBottom="16dp"/>

                <!-- AI vs result -->
                <TextView
                    android:id="@+id/tv_vs_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.vsResult}"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    tools:text="@string/loto_game_show_vs_result" />

                <!-- prize result -->
                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.result}"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="@string/loto_game_prize_result" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Button Block: Use Chain to constrain buttons to the bottom -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_vs_ai"
            style="@style/LottoButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/loto_game_vs_btn"
            app:layout_constraintBottom_toTopOf="@id/btn_generate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_results"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="1.0"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate"
            style="@style/LottoButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:text="@string/btn_machine_select_number"
            app:layout_constraintBottom_toTopOf="@id/btn_exit"
            app:layout_constraintEnd_toStartOf="@id/btn_draw"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_vs_ai" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_draw"
            style="@style/LottoButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="@string/btn_lottary_draw"
            app:layout_constraintBottom_toBottomOf="@id/btn_generate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_generate"
            app:layout_constraintTop_toTopOf="@id/btn_generate" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_exit"
            style="@style/LottoButtonStyle.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:text="@string/btn_exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_generate" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
