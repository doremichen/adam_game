<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.adam.app.lottogame.viewmodel.LotteryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:padding="24dp"
        tools:context=".MainActivity">

        <!-- 可選：垂直引導線(或水平guideline) 若要更精準控制區塊比例可加入 -->
        <!-- <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_vertical_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" /> -->

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_title_loto_game"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlHardcoded" />

        <!-- Lottery numbers -->
        <TextView
            android:id="@+id/tv_drawn_numbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:numbersText="@{vm.drawnNumber2}"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            tools:text="@string/tv_show_lottery_number" />

        <!-- Selected numbers -->
        <TextView
            android:id="@+id/tv_selected_numbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:numbersText="@{vm.selectedNumber}"
            app:layout_constraintTop_toBottomOf="@id/tv_drawn_numbers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            tools:text="@string/tv_select_your_number" />

        <!-- AI numbers -->
        <TextView
            android:id="@+id/tv_ai_numbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:numbersText="@{vm.AINumbers}"
            app:layout_constraintTop_toBottomOf="@id/tv_selected_numbers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            tools:text="@string/loto_game_show_ai_number" />

        <!-- VS Result -->
        <TextView
            android:id="@+id/tv_vs_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@{vm.vsResult}"
            app:layout_constraintTop_toBottomOf="@id/tv_ai_numbers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            tools:text="@string/loto_game_show_vs_result" />

        <!-- Prize result -->
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@{vm.result}"
            app:layout_constraintTop_toBottomOf="@id/tv_vs_result"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            tools:text="@string/loto_game_prize_result" />

        <!-- VS Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_vs_ai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/LottoButtonStyle"
            android:text="@string/loto_game_vs_btn"
            app:layout_constraintTop_toBottomOf="@id/tv_result"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Machine select button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/LottoButtonStyle"
            android:text="@string/btn_machine_select_number"
            app:layout_constraintTop_toBottomOf="@id/btn_vs_ai"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.48"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp" />

        <!-- Lottery button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_draw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/LottoButtonStyle"
            android:text="@string/btn_lottary_draw"
            app:layout_constraintTop_toTopOf="@id/btn_generate"
            app:layout_constraintBottom_toBottomOf="@id/btn_generate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48"
            android:layout_marginStart="8dp" />

        <!-- Exit button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/LottoButtonStyle"
            android:text="@string/btn_exit"
            app:layout_constraintTop_toBottomOf="@id/btn_generate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
